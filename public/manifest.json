{
  "manifest_version": 3,
  "name": "Internxt VPN",
  "short_name": "Internxt VPN",
  "version": "1.0.0",
  "description": "VPN Extension powered by Internxt",
  "icons": {
    "16": "/icons/16.png",
    "48": "/icons/48.png",
    "192": "/icons/192.png"
  },
  "permissions": ["storage", "proxy", "webRequest"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}
